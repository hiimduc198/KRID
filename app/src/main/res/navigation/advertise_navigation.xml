<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/advertise_navigation"
    app:startDestination="@+id/adv_home">

    <fragment
        android:id="@+id/adv_home"
        android:name="com.example.krid.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/adv_booking"
        android:name="com.example.krid.ui.booking.BookingFragment"
        android:label="Booking"
        tools:layout="@layout/fragment_booking" />
    <fragment
        android:id="@+id/adv_create_campaign"
        android:name="com.example.krid.ui.createcampaign.CreateCampaignFragment"
        android:label="Create Campaign"
        tools:layout="@layout/fragment_create_campaign" />

    <fragment
        android:id="@+id/adv_mycampaign_adv"
        android:name="com.example.krid.ui.mycampaign_adv.MyCampaignAdvFragment"
