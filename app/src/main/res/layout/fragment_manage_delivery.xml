<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="ORDER"
        android:textSize="24dp" />
    <!--    android:weightSum="10"-->
    <ScrollView android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_14"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black_color"
                android:layout_marginBottom="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_10"
                />


            <LinearLayout
                android:id="@+id/layout_product_and_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                tools:visibility="visible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Campaign Name"
                    />
                <EditText
                    android:id="@+id/ed_order_campaign_name"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/backgroud_white_border_4dp"
                    android:ems="10"
                    android:text="duc123"

                    android:inputType="none"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Influencer Name"
                    />
                <EditText
                    android:id="@+id/ed_order_influencer_name"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/backgroud_white_border_4dp"
                    android:ems="10"
                    android:text="Pham Quoc Duc"

                    android:inputType="textPersonName"
                    android:paddingLeft="20dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Status"
                    />
                <EditText
                    android:id="@+id/ed_order_status"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/backgroud_white_border_4dp"
                    android:ems="10"
                    android:text="Delivered"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Address"
                    />

                <EditText
                    android:id="@+id/ed_order_address"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/backgroud_white_border_4dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="KTX Dai hoc FPT"
                    android:paddingLeft="20dp" />

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:background="@drawable/background_red_border_4dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:paddingHorizontal="@dimen/dp_10"
                    />



            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>