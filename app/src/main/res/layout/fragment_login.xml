<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context=".ui.LoginFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/txt_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="KRID LOGIN"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="254dp"
            android:layout_height="49dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:hint="Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="254dp"
            android:layout_height="49dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:hint="Username"
            android:inputType="textPersonName"
            android:paddingLeft="12dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="194dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_login_Adv"
                android:layout_width="138dp"
                android:layout_height="47dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_login"
                android:text="ADVERTISER LOGIN"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPassword" />

            <Button
                android:id="@+id/btn_login_inf"
                android:layout_width="138dp"
                android:layout_height="47dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_login"
                android:paddingHorizontal="5dp"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:text="INFLUENCER LOGIN"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPassword" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="---OR---" />

        <Button
            android:id="@+id/button2"
            android:layout_width="134dp"
            android:layout_height="44dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_login"
            android:text="REGISTER"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login_Adv" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/text_underline"
            android:linksClickable="false"
            android:paddingBottom="15dp"
            android:text="Forget password?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>