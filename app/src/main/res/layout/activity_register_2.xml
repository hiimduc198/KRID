<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cb_individual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_2">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginTop="49dp"
        android:text="Register advetiser information"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="216dp"
        android:layout_height="42dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/backgroud_white_border_25_dp"
        android:ems="10"
        android:hint="Company name"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="212dp"
        android:layout_height="42dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/backgroud_white_border_25_dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Website"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="219dp"
        android:layout_height="42dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/backgroud_white_border_25_dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Full name"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Spinner
        android:id="@+id/field_register"
        android:layout_width="210dp"
        android:layout_height="41dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="39dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <Button
        android:id="@+id/button"
        android:layout_width="159dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/button_login"
        android:text="Complete"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/field_register" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="7dp"
        android:text="individual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="5dp"
        android:text="doesn't have a website"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />
</androidx.constraintlayout.widget.ConstraintLayout>