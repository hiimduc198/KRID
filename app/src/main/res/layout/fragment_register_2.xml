<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cb_individual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:backgroundTint="#FFFFFF"
    android:clickable="true"
    tools:context=".ui.Register2Fragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register advetiser information"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputName"
            android:layout_width="216dp"
            android:layout_height="42dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:hint="Personal name"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />
        <EditText
            android:id="@+id/inputCompanyName"
            android:layout_width="216dp"
            android:layout_height="42dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:hint="Company name"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <CheckBox
            android:id="@+id/checkIndividual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Individual" />

        <EditText
            android:id="@+id/inputWebsite"
            android:layout_width="212dp"
            android:layout_height="42dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Website"
            android:paddingLeft="20dp" />

        <CheckBox
            android:id="@+id/checkWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Doesn't have a website" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="219dp"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/inputPhone"
            android:layout_width="219dp"
            android:layout_height="42dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:inputType="phone"
            android:hint="Phone"
            android:paddingLeft="20dp" />

        <Spinner
            android:id="@+id/spinField"
            android:layout_width="210dp"
            android:layout_height="41dp"
            android:background="@drawable/backgroud_white_border_4dp"
            android:layout_marginTop="39dp"
            />

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="159dp"
            android:layout_height="44dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/button_login"
            android:text="Complete"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinField" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>