<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AllCampaignFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_my_campaign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="casual"
                android:text="My Campaign"
                android:textAlignment="center"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/campaign01"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/campaign01_img"
                    android:layout_width="160dp"
                    android:layout_height="@dimen/dimen_100dp"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    android:layout_weight="@dimen/dimen_3dp"
                    android:src="@drawable/mycampaigm2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/dimen_3dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_mycampaign_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:fontFamily="casual"
                        android:textSize="18sp"
                        android:inputType="textPersonName"
                        android:text="@string/text_campaign_name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_period_campaign"
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#87EA73"
                            android:clickable="@bool/btn_unclick"
                            android:fontFamily="casual"
                            android:text="@string/text_btn_period"
                            android:textStyle="italic" />

                        <Button
                            android:id="@+id/btn_status_mycampaign_inf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#DA7373"
                            android:clickable="@bool/btn_unclick"
                            android:fontFamily="casual"
                            android:text="@string/text_btn_status"
                            android:textStyle="italic"
                            tools:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/campaign02"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/campaign02_img"
                    android:layout_width="160dp"
                    android:layout_height="@dimen/dimen_100dp"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    android:layout_weight="@dimen/dimen_3dp"
                    android:src="@drawable/mycampaigm2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/dimen_3dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_mycampaign_name02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:inputType="textPersonName"
                        android:text="@string/text_campaign_name"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_period_campaign02"
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#87EA73"
                            android:clickable="@bool/btn_unclick"
                            android:fontFamily="casual"
                            android:text="@string/text_btn_period"
                            android:textStyle="italic" />

                        <Button
                            android:id="@+id/btn_status_mycampaign_inf02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#DA7373"
                            android:clickable="@bool/btn_unclick"
                            android:fontFamily="casual"
                            android:text="@string/text_btn_status"
                            android:textStyle="italic"
                            tools:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/campaign03"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/campaign03_img"
                    android:layout_width="160dp"
                    android:layout_height="@dimen/dimen_100dp"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    android:layout_weight="@dimen/dimen_3dp"
                    android:src="@drawable/mycampaigm2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/dimen_3dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_mycampaign_name03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:fontFamily="casual"
                        android:textSize="18sp"
                        android:inputType="textPersonName"
                        android:text="@string/text_campaign_name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_period_campaign03"
                            android:layout_width="111dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#87EA73"
                            android:clickable="@bool/btn_unclick"
                            android:fontFamily="casual"
                            android:text="@string/text_btn_period"
                            android:textStyle="italic" />

                        <Button
                            android:id="@+id/btn_status_mycampaign_inf03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#DA7373"
                            android:clickable="@bool/btn_unclick"
                            android:fontFamily="casual"
                            android:text="@string/text_btn_status"
                            android:textStyle="italic"
                            tools:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>