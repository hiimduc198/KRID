<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cb_individual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:backgroundTint="#FFFFFF"
    android:clickable="true"
    tools:context=".ui.Register2AdvFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:text="Register influence information"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/inputName"
            android:layout_width="246dp"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/inputPhone"
            android:layout_width="246dp"
            android:layout_height="42dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:hint="Phone"
            android:inputType="textPersonName"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="246dp"
            android:layout_height="42dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/inputFacebook"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/backgroud_white_border_25_dp"
            android:ems="10"
            android:hint="Link facebook"
            android:inputType="textPersonName"
            android:paddingLeft="20dp" />

        <Spinner
            android:id="@+id/spnJob"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="39dp"
            android:autofillHints="Job"
            android:background="#EBFFD7"
            android:clickable="true"
            android:contextClickable="true" />

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="159dp"
            android:layout_height="44dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/button_login"
            android:text="Complete"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinField" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>